                <label class="form-check-label">Rumania</label>
            </div>

            <div class="form-check">
                <input class="form-check-input pilotPlant" type="checkbox" value="Curitiba">
                <label class="form-check-label">Curitiba</label>
            </div>

            <div class="form-check">
                <input class="form-check-input pilotPlant" type="checkbox" value="Los Andes">
                <label class="form-check-label">Los Andes</label>
            </div>

            <div class="form-check">
                <input class="form-check-input pilotPlant" type="checkbox" value="Argentina">
                <label class="form-check-label">Argentina</label>
            </div>
        </div>
    </div>
</div>