<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Select the filters</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <button class="btn btn-secondary" id="clearFiltersButton" onclick="clearFilters()">Clear Filters</button>
    <div class="offcanvas-body">
        <!--FILTROS POR ESCALABILIDAD EXTERNA-->
        <div class="form-group" id="factoryFilters">
            <label><b>External Scalability</b></label>
            <div class="form-check">
                <input class="form-check-input plant-filter" type="checkbox" value="HLT">
                <label class="form-check-label">HTL</label>
            </div>

            <div class="form-check">
                <input class="form-check-input plant-filter" type="checkbox" value="Motores">
