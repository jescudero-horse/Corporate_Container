<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Select the filters</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <button class="btn btn-secondary" id="clearFiltersButton" onclick="clearFilters()">Clear Filters</button>
    <div class="offcanvas-body">
        <div>
            <div class="form-group" id="typeFilters">
                <label>Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Canvas">
                    <label class="form-check-label">Canvas</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Portals">
                    <label class="form-check-label">Portals</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Model-Driven Apps">
                    <label class="form-check-label">Model-Driven</label>
                </div>
            </div>
        </div>

        <div>
            <div class="form-group" id="factoryFilters">
                <label>Factory</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="HTL">
                    <label class="form-check-label">HLT</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Motores">
                    <label class="form-check-label">Motores</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Sevilla">
                    <label class="form-check-label">Sevilla</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Aveiro">
                    <label class="form-check-label">Aveiro</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Oyak">
                    <label class="form-check-label">Oyak</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Rumania">
                    <label class="form-check-label">Rumania</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Curitiba">
                    <label class="form-check-label">Curitiba</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Los Andes">
                    <label class="form-check-label">Los Andes</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Argentina">
                    <label class="form-check-label">Argentina</label>
                </div>
            </div>
        </div>

        <div class="container mt-4" id="dateRangeFilter">
            <div class="form-group" id="dateRange">
                <div class="date-range-container">
                    <label>Date range</label>
                    <button class="btn btn-danger" onclick="deleteDateRange()"  id="clearDates"><i class="bi bi-trash-fill"></i></button>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="minDateLabel">Minimum date</span>
                    <input type="date" id="minimumDate" name="minimumDate" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="maxDateLabel">Maximum date</span>
                    <input type="date" id="maximumDate" name="maximumDate" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
            </div>
        </div>
    </div>
</div>