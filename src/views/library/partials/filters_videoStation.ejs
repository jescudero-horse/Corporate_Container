<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">Select the filters</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <button class="btn btn-secondary" id="clearFiltersButton" onclick="clearFilters()">Clear Filters</button>
    <div class="offcanvas-body">
        <div>
            <div class="form-group" id="factoryFilters">
                <label>Factories</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="PFA">
                    <label class="form-check-label">PFA</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Curitiba">
                    <label class="form-check-label">Curitiba</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Motores">
                    <label class="form-check-label">Motores</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Mioveni">
                    <label class="form-check-label">Mioveni</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Bursa">
                    <label class="form-check-label">Bursa</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Aveiro">
                    <label class="form-check-label">Aveiro</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Sevilla">
                    <label class="form-check-label">Sevilla</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="CMC">
                    <label class="form-check-label">CMC</label>
                </div>
            </div>

            <div class="container mt-4" id="dateRangeFilter" hidden>
                <div class="form-group" id="dateRange">
                    <div class="date-range-container">
                        <label>Date range</label>
                        <button class="btn btn-danger" onclick="deleteDateRange()" id="clearDates"><i
                                class="bi bi-trash-fill"></i></button>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="minDateLabel">Minimum date</span>
                        <input type="date" id="minimumDate" name="minimumDate" class="form-control"
                            aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="maxDateLabel">Maximum date</span>
                        <input type="date" id="maximumDate" name="maximumDate" class="form-control"
                            aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>
            </div>

            <div class="form-group" id="statusFilter" hidden>
                <label>Status</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Not applicable">
                    <label class="form-check-label">Not applicable</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="I'm going to apply it">
                    <label class="form-check-label">I'm going to apply it</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="I'm applying it">
                    <label class="form-check-label">I'm applying it</label>
                </div>
            </div>
        </div>
    </div>
</div>